{
  "xpjson": "0.2",
  "type": "PlanSchema",

  "name": "Robot Science Schema",
  "notes": "Define available robot science commands",
  "id": "http://example.com/robotScienceSchema.json",

  "planIdFormat": "{plan.site.id}_{plan.planNumber:03d}{plan.planVersion}",
  "stationIdFormat": "STN{stationIndex:02d}",
  "segmentIdFormat": "SEG{stationIndex:02d}",
  "commandIdFormat": "{parent.id}_{commandIndex:1d}_{command.presetCode}",

  "segmentParams": [
    {
      "type": "ParamSpec",
      "id": "speed",
      "name": "speed",
      "valueType": "number",
      "unit": "m/s",
      "minimum": 0,
      "default": 0.4,
      "notes": "Estimated mean speed of drive"
    },
    {
      "type": "ParamSpec",
      "id": "tolerance",
      "name": "tolerance",
      "valueType": "number",
      "unit": "meters",
      "minimum": 0,
      "default": 1.0,
      "notes": "How close we need to get to the target coordinates"
    }
  ],

  "paramSpecs": [
    {
      "type": "ParamSpec",
      "id": "duration",
      "valueType": "number",
      "unit": "minutes",
      "minimum": 0,
      "notes": "Estimated time required to execute command",
      "required": false
    }
  ],

  "commandSpecs": [
    {
      "type": "CommandSpec",
      "id": "CommandWithDuration",
      "parent": "Command",
      "abstract": true,
      "params": [
        {
          "type": "ParamSpec",
          "id": "duration",
          "parent": "duration"
        },
        {
          "type": "ParamSpec",
          "id": "presetCode",
          "name": "Preset code",
          "valueType": "string",
          "notes": "Identifier for the command preset in the PlanLibrary, included in id field of commands",
          "visible": false
        }
      ]
    },
    {
      "type": "CommandSpec",
      "id": "Image",
      "parent": "CommandWithDuration",
      "abstract": true,
      "params": [
        {
          "type": "ParamSpec",
          "id": "whiteBalance",
          "name": "White balance",
          "valueType": "string",
          "choices": [
            ["A", "Auto"],
            ["D", "Daylight"],
            ["C", "Cloudy"]
          ],
          "notes": "White balance setting for camera; auto is usually ok"
        },
        {
          "type": "ParamSpec",
          "id": "focalLengthMm",
          "name": "Focal length",
          "valueType": "number",
          "unit": "mm",
          "minimum": 7.4,
          "maximum": 44,
          "notes": "Actual (not 35 mm-equivalent) focal length of camera."
        }
      ]
    },
    {
      "type": "CommandSpec",
      "id": "MicroImage",
      "notes": "Acquire an image with the down-pointing microscopic imager.",
      "parent": "Image",
      "params": [
        {
          "type": "ParamSpec",
          "id": "duration",
          "parent": "duration",
          "default": 0.1
        }
      ]
    },
    {
      "type": "CommandSpec",
      "id": "PeriodicPancam",
      "notes": "Initiate periodic imaging with the PanCam imager. This command is non-blocking; images will continue to be collected as the rest of the plan executes, until explicitly stopped.",
      "parent": "Image",
      "blocking": false,
      "params": [
        {
          "type": "ParamSpec",
          "id": "intervalSeconds",
          "name": "Interval between images",
          "valueType": "number",
          "unit": "seconds",
          "minimum": 2
        },
        {
          "type": "ParamSpec",
          "id": "duration",
          "parent": "duration",
          "default": 0,
          "visible": false,
          "editable": false
        }
      ]
    }
  ],

  "planSequenceCommands": [],

  "stationSequenceCommands": [
    "MicroImage"
  ],

  "segmentSequenceCommands": [
    "PeriodicPancam"
  ],

  "unitSpecs": [
    {
      "type": "UnitSpec",
      "name": "length",
      "id": "length",
      "units": {
        "meters": 1.0,
        "mm": 0.001,
        "inches": 0.0254
      }
    },
    {
      "type": "UnitSpec",
      "name": "duration",
      "id": "duration",
      "units": {
        "seconds": 1.0,
        "minutes": 60
      }
    },
    {
      "type": "UnitSpec",
      "name": "speed",
      "id": "speed",
      "units": {
        "m/s": 1.0,
        "meters/sec": 1.0,
        "mph": 2.2369363
      }
    },
    {
      "type": "UnitSpec",
      "name": "angle",
      "id": "angle",
      "units": {
        "degrees": 1.0,
        "radians": 0.0174533
      }
    }
  ]
}

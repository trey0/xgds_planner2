{
    "type": "object",
    "properties": {

        "type": {
            "enum": ["Plan"],
            "required": true
        },

        "name": {
            "type": "string"
        },

        "notes": {
            "type": "string"
        },

        "id": {
            "type": "string"
        },

        "xpjson": {
            "type": "string",
            "required": true
        },

        "subject": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },

        "creator": {
            "type": "string",
            "name": "Author"
        },
        
        "modifier": {
            "type": "string"
        },

        "contributors": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },

        "dateCreated": {
            "type": ["number", "string"]
        },

        "dateModified": {
            "type": ["number", "string"]
        },
        
        "derivedInfo": {
            "type": "object"
        },

        "schemaUrl": {
            "type": "string"
        },

        "libraryUrls": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },

        "planNumber": {
            "type": "integer"
        },

        "planVersion": {
            "type": "string"
        },
        
        "scheduledStartTime": {
             "type": "date-time"
        },

        "site": {
            "type": "object",
            "properties": {
                "type": {
                    "enum": ["Site"],
                    "required": true
                },
                "name": {
                    "type": "string"
                },
                "notes": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "crs": {
                    "type": "object"
                },
                "bbox": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                }
            }
        },

        "platform": {
            "type": "object",
            "properties": {
                "type": {
                    "enum": ["Platform"],
                    "required": true
                },
                "name": {
                    "type": "string"
                },
                "notes": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                }
            }
        },

        "targets": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "enum": ["Target"],
                        "required": true
                    },
                    "name": {
                        "type": "string"
                    },
                    "notes": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    }
                }
            }
        },
        
        "uuid": {
            "type": "string",
            "required": true
        },

        "sequence": {
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        
        "exceptions": {
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        
        "validations":{
            "type": "array",
            "items":{
                "type": "object",
                "properties": {
                    "status": {
                        "enum":["error", "warning", "success"] 
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string",
                        "required": false
                    },
                    "time": {
                        "type": "date-time"
                    },
                    "source":{
                        "type": "string",
                        "required": false
                    },
                    "data":{
                         "type": "object",
                         "required": false
                    }
                }
            }
        }
        
    }
}
